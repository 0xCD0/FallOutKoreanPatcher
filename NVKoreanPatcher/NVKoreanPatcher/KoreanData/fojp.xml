	<!-- 각종 설정 -->	
	<config id="AllTextReplace" value="1" /> <!-- 0: 번역 될 수 있는 텍스트만 번역 / 1: 번역 되지 않는 텍스트도 번역 -->
	<config id="ForceDirect3D9" value="0" /> <!-- 1: Fallout New Vegas에서의 화면이 흔들리는 현상을 회피 / 0: 끄기 ※New Vegas용무의 설정※ -->
	<config id="UseOptimizedTextureSize" value="0" /> <!-- 1: texture 사이즈를 최적화 / 0: 하지 않는다 --> <!-- ※1(을)를 추천. 다만 환경에 따라서는 정상 동작하지 않을 가능성이 있습니다. 그 경우는 0으로 해주세요.  -->
	<config id="EnableTranslationKey" value="3A" /> <!-- 번역ON/OFF변환 키 (DIK의 16진수) / 0:끄기 --> <!-- Q: 10, X: 2D, Left Win: DB, Caps Lock: 3A -->
	<config id="TranslationLoggingKey" value="58" /> <!-- 번역 로그 출력 키 (DIK의 16진수) / 0:끄기 --> <!-- Left Alt: 38 , F12: 58, Caps Lock: 3A -->
    <config id="ConsoleKey" value="0C" /> <!-- 콘솔 표시 키 (DIK의 16진수) / 0: 끄기 --> <!-- 0C: Minus ,F4: 3E -->
	<config id="LineAdjuster" value="0" /> <!-- Darnified UI 등의 모드로 인해 텍스트가 화면 밖으로 넘어갈때 이를 조정하는 옵션. 값이 높을수록 한글이 아래로 아래로 출력됨. -->
	<config id="FPSManagement" value="0" /> <!-- 1 : FPS관리 기능 켜기 / 0: 끄기 -->
	<config id="FPSManagementKey" value="44" /> <!-- FPS관리 기능 켜고/끄기 (토클 키이며 DIK의16진수) / 0: 끄기 --> <!-- F10 -->
	<config id="FPSMaximum" value="60" /> 	<!-- FPS관리 기능을 켰을때 최대FPS 설정 -->

	<xinput>
