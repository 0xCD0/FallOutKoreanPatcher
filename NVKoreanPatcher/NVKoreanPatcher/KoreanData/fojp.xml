	</xinput>

	<!-- 사전 번역시에 제거되는 프리픽스, 서픽스 -->
	<config id="TrimPrefixRegularExpressions"> 
		<![CDATA[^([ >]+|<GID[0-9]+>)]]> <!-- 터미널의 기호|ID매입 -->
	</config>
	<config id="TrimSuffixRegularExpressions">
		<![CDATA[([ ]*)$]]>
	</config>
	
	<!-- 사전 번역시에 우회되는 프리픽스, 서픽스 -->
	<config id="BypassPrefixRegularExpressions"> 
		<![CDATA[^(\[[a-zA-Z0-9,%\$/ ]+\]|Req: .*Ranks: [0-9]+|<.+>)]]> <!-- 스피치 챌린지, 스킬 요구|Perks|ID매입 -->
	</config>
	<config id="BypassSuffixRegularExpressions">
		<!-- 원본: <![CDATA[(\([0-9/\(\)A-Z, ]+\)|\+)$]]> --> <!-- 아이템 개수/개조 -->
		<![CDATA[(\+|\+[ ]\([0-9, ]+\)|\([0-9/\(\), ]+\))$]]> <!-- 모드/모드+아이템 개수/아이템 개수/개조 -->
	</config>

	<!-- 출력 텍스트의 필터 (화면 출력 직전에 출력 문자 라인을 변환, AllTextReplace=1 라면 번역되어 있지 않은 텍스트에도 적용됨)-->
